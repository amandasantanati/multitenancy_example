<p id="notice"><%= notice %></p>

<h1>Listing Contents</h1>
<h3><%= link_to '+ New Content', new_content_path %></h3>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Slug</th>
      <th>Domain</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.title %></td>
        <td><%= content.slug %></td>
        <td><%= content.domain.subdomain %></td>
        <td><%= link_to 'Show', content %></td>
        <td><%= link_to 'Edit', edit_content_path(content) %></td>
        <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
